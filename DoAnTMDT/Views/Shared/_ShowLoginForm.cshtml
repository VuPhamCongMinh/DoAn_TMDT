@model DoAnTMDT.ViewModels.LoginRegisterViewModel

<div class="overlay-modal1 js-hide-modal1"></div>
<div class="cont">
    <form asp-action="login" asp-controller="account" method="post" id="loginForm">
        <div class="form sign-in">
            <h2>Welcome back,</h2>
            <label>
                <span>Email</span>
                <input type="text" name="UserName" />
            </label>
            <label>
                <span>Password</span>
                <input type="password" name="Password" />
            </label>
            <p class="forgot-pass">Forgot password?</p>
            <button type="submit" class="normal-button">Sign In</button>
            <button type="button" class="fb-btn js-hide-modal1">EXIT</button>
        </div>
    </form>
    <div class="sub-cont">
        <div class="img">
            <div class="img__text m--up">
                <h2>New here?</h2>
                <p>Sign up and discover great amount of new opportunities!</p>
            </div>
            <div class="img__text m--in">
                <h2>One of us?</h2>
                <p>If you already has an account, just sign in. We've missed you!</p>
            </div>
            <div class="img__btn">
                <span class="m--up">Sign Up</span>
                <span class="m--in">Sign In</span>
            </div>
        </div>
        <form action="@Url.Action("Register","Account")" method="post" id="registerForm">
            <div class="form sign-up">
                <h2>Time to feel like home,</h2>
                <label>
                    <span>Email</span>
                    <input type="text" name="UserName" />
                </label>
                <label>
                    <span>Password</span>
                    <input type="password" name="Password" />
                </label>
                <button type="submit" class="normal-button">Sign Up</button>
                <button type="button" class="fb-btn js-hide-modal1">EXIT</button>
            </div>
        </form>
    </div>
</div>



<script src="~/js/login-register.js"></script>

