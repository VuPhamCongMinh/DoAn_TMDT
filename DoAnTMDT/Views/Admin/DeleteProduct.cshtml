@model DoAnTMDT.Models.Product

@{
    ViewData["Title"] = "DeleteProduct";
}

@*<h1>DeleteProduct</h1>*@

<h5>Bạn có chắc muốn xóa sản phẩm này?</h5>
<div>
    <h6>Thông tin sản phẩm</h6>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.ProductName)*@
            Tên sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.ProductPrice)*@
            Đơn giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.SmallSizeQuantity)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SmallSizeQuantity)
            Size nhỏ
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.MediumSizeQuantity)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MediumSizeQuantity)
            Size vừa
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.LargeSizeQuantity)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LargeSizeQuantity)
            Size lớn
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.ImagePath)*@
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.ImagePath)*@
            <img src="@Url.Content(Model.ImagePath)" style="height:200px; width:200px" />
        </dd>
    </dl>
    
    <form asp-action="DeleteProduct">
        <input type="hidden" asp-for="ProductID" />
        <input type="submit" value="DeleteProduct" class="btn btn-danger" /> |
        <a asp-action="Product">Quay lại!</a>
    </form>
</div>
